<section class="section">
	<div class="container">
		<div class="divide movie">
			<img src="<%= actor.thumbnail %>" alt="<%= actor.name %>" />
			<div class="content">
				<div class="info">
					<h2><%= actor.name %></h2>
					<p class="released">Geboren op: <%= actor.birthday %></p>
					<% for (let i = 0; i < actor.description.split(".").length; i++) { %>
					<p>
						<%= actor.description.split(".")[i].replace(/&period;/g, '.') + (i != actor.description.split(".").length - 1 ? '.': '')
						%>
					</p>

					<% } %>
				</div>
			</div>
		</div>
	</div>
</section>
